   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Game">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#handleMainPage" text="Main Page" />
